From 9da3e7e8440efae8741bbda4e1161c2e61163de4 Mon Sep 17 00:00:00 2001
From: Mars <deanjai@gmail.com>
Date: Sun, 3 Oct 2021 14:23:18 +0800
Subject: [PATCH] change flash layout

---
 arch/arm/boot/dts/openbmc-flash-layout-64.dtsi | 16 ++++++++--------
 1 file changed, 8 insertions(+), 8 deletions(-)

diff --git a/arch/arm/boot/dts/openbmc-flash-layout-64.dtsi b/arch/arm/boot/dts/openbmc-flash-layout-64.dtsi
index 7af41361c480..67abb9a03725 100644
--- a/arch/arm/boot/dts/openbmc-flash-layout-64.dtsi
+++ b/arch/arm/boot/dts/openbmc-flash-layout-64.dtsi
@@ -9,27 +9,27 @@ partitions {
 	#size-cells = <1>;
 
 	u-boot@0 {
-		reg = <0x0 0xe0000>; // 896KB
+		reg = <0x0 0xc7000>;
 		label = "u-boot";
 	};
 
-	u-boot-env@e0000 {
-		reg = <0xe0000 0x20000>; // 128KB
+	u-boot-env@c7000 {
+		reg = <0xc7000 0x39000>;
 		label = "u-boot-env";
 	};
 
 	kernel@100000 {
-		reg = <0x100000 0x900000>; // 9MB
+		reg = <0x100000 0x500000>;
 		label = "kernel";
 	};
 
-	rofs@a00000 {
-		reg = <0xa00000 0x2000000>; // 32MB
+	rofs@600000 {
+		reg = <0x600000 0x2E00000>;
 		label = "rofs";
 	};
 
-	rwfs@2a00000 {
-		reg = <0x2a00000 0x1600000>; // 22MB
+	rwfs@3400000 {
+		reg = <0x3400000 0xC00000>;
 		label = "rwfs";
 	};
 };
